<%= link_to("<< Back to index", {action: 'index'}, class: 'back-link') %>
<div class="section edit">
  <h2>Update Section</h2>
  <%= form_for(:section, url: {action: 'update', id: @section.id}) do |f| %>
    <table summary="Section form field">
      <tr>
        <th>Name: </th>
        <td><%= f.text_field(:name) %></td>
      </tr>
      <tr>
        <th>Position: </th>
        <td><%= f.text_field(:position) %></td>
      </tr>
      <tr>
        <th>Visible</th>
        <td><%= f.text_field(:visible) %></td>
      </tr>
      <tr>
        <th>Content Type</th>
        <td><%= f.text_field(:content_type) %></td>
      </tr>
      <tr>
        <td>Content: </td>
        <td><%= f.text_field(:content) %></td>
      </tr>
    </table><br>
    <div class="form-button">
      <%= submit_tag("Update Content") %>
    </div>
  <% end %>
</div>