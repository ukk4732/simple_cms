<% @page_title = "Subjects" %>
<div class="subjects index">
  <h2>Subjects</h2>
  <%= link_to("Add Subject", {action: 'new'}, class: "action new") %><br><br>
  <table>
    <tr class="header">
      <th>Position</th>
      <th>Subjects</th>
      <th>Visible</th>
      <th>Pages</th>
      <th>Actions</th>
    </tr>
    <% @subjects.each do |subject| %>
      <tr>
        <td><%= subject.position %></td>
        <td><%= subject.name %></td>
        <td class="center"><%= status_tag(subject.visible) %></td>
        <td class="center"><%= subject.pages.count %></td>
        <td class="actions">
          <%= link_to("Show", {action: 'show', id: subject.id}, class: 'action show') %>
          <%= link_to("Edit", {action: 'edit', id: subject.id}, class: 'action show') %>
          <%= link_to("Delete", {action: 'delete', id: subject.id}, class: 'action delete') %>
        </td>
      </tr>
    <% end %>
  </table>
</div>