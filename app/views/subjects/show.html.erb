<% if !flash[:notice].blank? %>
  <div class="notice">
    <%= flash[:notice] %>
  </div><br>
<% end %>
<%= link_to("<< Back to index", {action: 'index'}, class: 'back-link') %>
<div class="subject show">
  <h2>Show Subject</h2>
  <table summary="Subject detail view">
    <tr>
      <th>Name: </th>
      <td><%= @subject.name %></td>
    </tr>
    <tr>
      <th>Position: </th>
      <td><%= @subject.position %></td>
    </tr>
    <tr>
      <th>Visible?</th>
      <td><%= @subject.visible ? 'Yes' : 'No' %></td>
    </tr>
    <tr>
      <th>Created at: </th>
      <td><%= @subject.created_at %></td>
    </tr>
    <tr>
      <th>Updated at: </th>
      <td><%= @subject.updated_at %></td>
    </tr>    
  </table>
</div>