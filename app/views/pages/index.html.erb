<div class="pages index">
  <h2>Pages</h2>
  <%= link_to("Add Page", {action: 'new'}, class: "action new") %><br><br>
  <table>
    <tr class="header">
      <th>Position</th>
      <th>Name</th>
      <th>Permalink</th>
      <th>Visible</th>
      <th>Actions</th>
    </tr>
    <% @pages.each do |page| %>
      <tr>
        <td><%= page.position %></td>
        <td><%= page.name %></td>
        <td class="center"><%= page.permalink %></td>
        <td class="center"><%= status_tag(page.visible) %></td>
        <td class="actions">
          <%= link_to("Show", {action: 'show', id: page.id}, class: 'action show') %>
          <%= link_to("Edit", {action: 'edit', id: page.id}, class: 'action show') %>
          <%= link_to("Delete", {action: 'delete', id: page.id}, class: 'action delete') %>
        </td>
      </tr>
    <% end %>
  </table>
</div>