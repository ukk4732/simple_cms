<% if !flash[:notice].blank? %>
  <div class="notice">
    <%= flash[:notice] %>
  </div><br>
<% end %>
<%= link_to("<< Back to index", {action: 'index'}, class: 'back-link') %>
<div class="pages show">
  <h2>Show Page</h2>
  <table summary="Page detail view">
    <tr>
      <th>Name: </th>
      <td><%= @page.name %></td>
    </tr>
    <tr>
      <th>Position: </th>
      <td><%= @page.position %></td>
    </tr>
    <tr>
      <th>Visible?</th>
      <td><%= @page.visible ? 'Yes' : 'No' %></td>
    </tr>
    <tr>
    <tr>
      <th>Permalink</th>
      <td><%= @page.permalink %></td>
    </tr>
      <th>Created at: </th>
      <td><%= @page.created_at %></td>
    </tr>
    <tr>
      <th>Updated at: </th>
      <td><%= @page.updated_at %></td>
    </tr>    
  </table>
</div>